<div class="container">
    <div class="row my-5">
        <a href="/admin/add-product" class="btn btn-success ml-auto ">Add Product</a>
    </div>
    <table class="table">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Catagory</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Catagory}}</td>
      <td>{{this.Description}}</td>
      <td><img style="height:50px; width:50px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>